<com.sakisds.icymonitor.views.SplitPaneLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:spl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    spl:orientation="vertical"
    spl:splitterSize="18dp"
    spl:splitterBackground="@drawable/ellipses"
    spl:splitterPosition="66%">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:id="@+id/graph_container"
            android:layout_weight="1" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />
    </LinearLayout>


    <!-- the android:id is important -->
    <ListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:layout_gravity="bottom" />

</com.sakisds.icymonitor.views.SplitPaneLayout>